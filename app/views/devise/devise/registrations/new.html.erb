<div class="row">
  <div class="span6 offset2">
    <div class="boxes">
      <%= nested_form_for resource, :as => resource_name, 
                                    :url => registration_path(resource_name),
                                    :html => {:class => "form-horizontal"} do |f| %>
        <%= devise_error_messages! %>
        <fieldset>
          <legend>Therapist Sign Up</legend>
        <div class="control-group">
          <%= f.label :email %>
          <div class="controls"><%= f.email_field :email %></div>
        </div>

        <div class="control-group">
          <%= f.label :password %>
          <div class="controls"><%= f.password_field :password %></div>
        </div>

        <div class="control-group">
          <%= f.label :password_confirmation %>
          <div class="controls"><%= f.password_field :password_confirmation %></div>
        </div>
        <%= render :partial => "devise/shared/links" %>
        <div class="form-actions">
          <%= f.submit "         Sign up         ", :class => "btn-success" %>
        </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>
