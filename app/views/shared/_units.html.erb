<table class="table">
  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= link_to unit.name, user_unit_path(@user, unit) %></td>
        <td><%= distance_of_time_in_words(unit.created_at, Time.now) %> ago</td>
        <td><%= unit.description %></td><td></td>
      </tr>
    <% end %>
  </tbody>
</table>