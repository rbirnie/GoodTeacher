<%= semantic_form_for [@unit, @lesson] do |f| %>
  <% if @lesson.errors.any? %>
    <div class="alert alert-error">
      <% @lesson.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>
  <fieldset>
    <div class="control-group">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="control-group">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>

    <div class="control-group">
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </div>
  
    <div class="form-actions">
      <p><%= f.submit "Save", :class => "btn-success" %></p>
    </div>
  </fieldset>
<% end %>
