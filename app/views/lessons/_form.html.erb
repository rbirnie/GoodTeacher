<%= semantic_form_for [@user, @unit, @lesson] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name %>
    
  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.submit "Save", :class => "btn btn-large btn-primary" %>
<% end %>
