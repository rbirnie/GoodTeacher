<%= semantic_form_for @course.units do |f| %>
  <% if @course.units.errors.any? %>
    <div class="alert alert-error">
      <% @course.units.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>
  <fieldset>
    <div class="control-group">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="control-group">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>
  
    <div class="form-actions">
      <p><%= f.submit "Save", :class => "btn-success" %></p>
    </div>
  </fieldset>
<% end %>
