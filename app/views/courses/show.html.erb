<div class="row">
  <div class="span8 offset2">
    <legend><%= @course.name %></legend>
    <section>
      <%= render 'favorites/favorite_form' if signed_in? %>
    </section>
    <%= @course.description %>
    <% if current_user == @user %>
      <%= link_to "Edit", edit_user_course_path(@user, @course) %>
    <% end %>
  </div>
  <div class="span4 offset2">
    <legend>Comments</legend>
    <%= render "comments/comments" %>
    <%= render "comments/form" %>
  </div>
  <div class="span4">
    <% unless @course.units.blank? %>
      <% @course.units.each do |unit| %>
        <ul>
          <b><%= unit.name %></b>
          <%= unit.description %>
        </ul>
      <% end %>
    <% end %>
  </div>
</div>