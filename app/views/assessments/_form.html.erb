  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description, :rows => "2" %>

  <%= f.label :prompt %>
  <%= f.text_area :prompt %>
  
  <%= f.submit "Save", :class => "btn btn-large btn-primary" %></p>
